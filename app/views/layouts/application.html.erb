<!DOCTYPE html>
<html>
  <head>
    <title>Foodgram</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>

<% if current_user %>
Signed in as <%= current_user.name  %> | <%= link_to 'Logout', '/logout'  %>
<% else %>
<%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup'  %>

<% end %>




<nav class="navbar navbar-default navbar-container navbar-header">
  <button class="navbar-toggle collapsed" data-target="#bs-navbar-collapse-1" data-toggle="collapse" type="button">
    <span class="sr-only">Toggle Navigation</span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </button>
  <div class="navbar-brand">
    <%= link_to "Foodgram", root_path%>
  </div>
  <ul class="nav navbar-nav navbar-right">
    <li>
    	<% if current_user %>
<%= link_to "New Post", new_post_path %>
<% end %>
      
    </li>
    <li>
      <%#= link_to "Login", '#' %>
    </li>
    <li>
      <%#= link_to "Register", '#' %>
    </li>
  </ul>
</nav>

<div class="container">
	
	    <%= yield %>
</div>



  </body>
</html>
